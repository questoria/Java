package com.company;

import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        FirstGame firstGame = new FirstGame();
        SecondGame secondGame = new SecondGame();
        System.out.println("Выберите игру");
        System.out.println();
        System.out.println("1 Угадай число");
        System.out.println("2 Угадай еду");
        switch (doScanner()) {
            case 1:
                firstGame.greetFirstGame();
                break;
            case 2:
                secondGame.startGame();
                break;
            default:
                System.out.println("Вы ввели неверную команду!");
                break;
        }
    }

    static int doScanner() {
        Scanner scanner = new Scanner(System.in);
        return scanner.nextInt();
    }
}

    class FirstGame extends Main{
    protected void greetFirstGame(){
        System.out.println("Добро пожаловать в игру Угадай число!");
        System.out.println();
        System.out.println("У вас есть три попытки.");
        System.out.println();
        startGame();
    }

    static void startGame(){
        Random random = new Random();
        System.out.println("Введите целое число от 0 до 9");
        int randomNumber = random.nextInt(10);
        for (int i = 1; i < 4; i++) {
            System.out.println("Попытка номер "+i);
            int number = doScanner();
            if (number > randomNumber) {
                System.out.println("Ваше число больше");
            }
            else if (number < randomNumber) {
                System.out.println("Ваше число меньше");
            }
            else  {
                System.out.println("Вы угадали!");
                break;
            }
        }
        System.out.println();
        System.out.println("----------------------------------------------------------------------------");
        exitGame();
    }

    static void exitGame() {
        System.out.println("Повтрить игру ещё раз? (1 - да, 0 - нет)");
        switch (doScanner()) {
            case 0:
                System.out.println("Спасибо за игру!");
                break;
            case 1:
                startGame();
                break;
            default:
                System.out.println("Вы ввели неверную команду!");
                System.out.println();
                exitGame();
                break;
        }
    }
}

    class SecondGame extends Main {
        static String gameWord;

    protected void startGame() {
        System.out.println("Добро пожаловать в игру Угадай еду!");
        System.out.println();
        System.out.println("Введите название еды");
        Random random = new Random();
        String[] words = {"apple", "orange", "lemon", "banana", "apricot", "avocado", "broccoli", "carrot", "cherry", "garlic", "grape", "melon", "leak", "kiwi", "mango", "mushroom", "nut", "olive", "pea", "peanut", "pear", "pepper", "pineapple", "pumpkin", "potato"};
        gameWord=words[random.nextInt(words.length)];
        playGame();
    }
    static void playGame(){
        Scanner scanner = new Scanner(System.in);
        String userWord = scanner.nextLine().toLowerCase();
        char[] arrayOutput = new char[15];
        if (gameWord.equals(userWord)) {
            System.out.println("Вы угадали!");
            System.out.println("Спасибо за игру!");
        }
        else {
            String changedGameWord = gameWord + "--------------";
            String changedUserWord = userWord + "***************";
            boolean achievement=false;

            for (int i = 0; i < arrayOutput.length; i++) {
                if (changedGameWord.charAt(i) == changedUserWord.charAt(i)) {
                    arrayOutput[i] = changedUserWord.charAt(i);
                    achievement=true;
                }
                else {
                    arrayOutput[i] = '#';
                }
                System.out.print(arrayOutput[i]);
            }
            System.out.println();
            restartGame(achievement);
        }
    }

    static void restartGame(boolean achievement){
        if (achievement) {
            System.out.println("У вас хорошо получается. Так держать!");
        } else {
            System.out.println("Не отчаивайтесь, попробуйте ещё раз!");
        }
        playGame();
    }
}
