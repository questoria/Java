package com.company;

public class Main {

    public static void main(String[] args) {
	    Employee.outputsInformationToTheConsole();
	    Person.fillingInAnArrayPerson();
	    Person.showPerson();
    }
}

class Employee{
    private String name;
    private String position;
    private String email;
    private int phoneNumber;
    private int salary;
    private int age;
    public Employee(String name, String position, String email, int phoneNumber, int salary, int age){
        this.name=name;
        this.position=position;
        this.email=email;
        this.phoneNumber= phoneNumber;
        this.salary=salary;
        this.age=age;
    }

    static void outputsInformationToTheConsole(){
        Employee seleznev = new Employee("Сергей Николаевич Селезнёв","сторож","Seleznev@mail.ru",234_41_26,15500,49 );
        System.out.println("ФИО"+seleznev.name);
        System.out.println("должность "+seleznev.position);
        System.out.println("email "+seleznev.email);
        System.out.println("телефон "+seleznev.phoneNumber);
        System.out.println("зарплата "+seleznev.salary);
        System.out.println("возраст " + seleznev.age);
        System.out.println();
        System.out.println("--------------------------------------------------------");
        System.out.println();
    }
}

class Person{
    private String name;
    private String position;
    private String email;
    private int phoneNumber;
    private int salary;
    private int age;
    static Person[] persArray= new Person[5];
    Person(String name, String position, String email, int phoneNumber, int salary, int age){
        this.name=name;
        this.position=position;
        this.email=email;
        this.phoneNumber= phoneNumber;
        this.salary=salary;
        this.age=age;
    }

    static void fillingInAnArrayPerson() {
        persArray[0] = new Person("Константин Олегович Кожемяк", "директор", "kogemyak@mail.ru",298_33_28, 35000, 44);
        persArray[1] = new Person("Варвара Андреевна Глушко", "бухгалтер", "Glushko@mail.ru", 298_38_45, 40000, 54);
        persArray[2] = new Person("Богдан Аязович Гугулашвили", "секретарь", "Gugulashvili@mail.ru",298_30_04, 39000, 25);
        persArray[3] = new Person("Борис Григорьевич Скоробогатов", "охранник", "Skorobogatov@mail.ru",298_84_13, 10000, 24);
        persArray[4] = new Person("Елисей Сергеевич Уткин", "инженер", "Utkin@mail.ru",298_90_25, 30000, 52);
    }

    static void showPerson(){
        for (int i=0; i<persArray.length; i++){
            if (persArray[i].age>40){
                System.out.println("Ф.И.О. "+persArray[i].name+" - должность "+persArray[i].position+" ( зарплата "+persArray[i].salary+" )");
                System.out.println("контактная информация: email " + persArray[i].email+" / тел. "+persArray[i].phoneNumber);
                System.out.println("возраст " + persArray[i].age);
                System.out.println();
            }
        }
    }
}
